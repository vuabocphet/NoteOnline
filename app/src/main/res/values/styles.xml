<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="FloatingActionButton">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blackDark</item>
        <item name="colorPrimaryDark">@color/blackDark</item>
        <item name="colorAccent">@color/blackDark</item>
        <item name="android:windowBackground">@drawable/stylescreen</item>
    </style>

    <style name="Exit_Animation">
        <item name="android:windowExitAnimation">@anim/translate_dialog_out_setting</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


        <style name="center" parent="Animation.AppCompat.Dialog">
            <item name="android:windowEnterAnimation">@anim/translate_dialog_in_setting</item>
            <item name="android:windowExitAnimation">@anim/translate_dialog_out_setting</item>

    </style>

</resources>
